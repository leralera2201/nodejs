<form action="/register" method="post" style="display: flex;justify-content: center;align-items: center;flex-direction: column;margin-top: 50px;">
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input name="name" type="text" class="form-control"  aria-describedby="name" style="width: 500px;">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input name="email" type="email" class="form-control"  aria-describedby="emailHelp" style="width: 500px;">
    </div>
    <div class="form-group" >
        <label for="exampleInputPassword1">Password</label>
        <input name="password" type="password" class="form-control" style="width: 500px;">
    </div>
    <div class="form-group">
        <a href="/login">Already have account?</a>
    </div>
    <button type="submit" class="btn btn-dark">Submit</button>
</form>
